{
    "name": "ssr-react-project",
    "description":
        "Fast and effective environment for frontend development with React 16, Redux, Webpack and SSR",
    "author": "Maxim Lyulyaev",
    "version": "1.0.0",
    "main": "src/index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development babel-node src/index",
        "watch": "cross-env NODE_ENV=development babel-watch src/index",
        "build":
            "npm run build:client && npm run build:server && npm run build:node",
        "server": "node public/index.js",
        "build:client":
            "cross-env NODE_ENV=production webpack -p --config webpack/client.js",
        "build:server":
            "cross-env NODE_ENV=production webpack -p --config webpack/server.js",
        "build:node":
            "cross-env NODE_ENV=production webpack -p --config webpack/node.js",
        "version-increment":
            "perl -i -pe 's/^((\\d+\\.)*)(\\d+)(.*)$/$1.($3+1).$4/e' < version.num version.num",
        "dockerbuild":
            "yarn version-increment && yarn build && sudo docker build -t lyulyaevma/ssr-react-project:$(cat version.num) . && sudo docker push lyulyaevma/ssr-react-project:$(cat version.num)"
    },
    "dependencies": {
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-polyfill": "^6.26.0",
        "babel-runtime": "^6.26.0",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "history": "^4.7.2",
        "loadable-components": "^2.0.0",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-helmet": "^5.2.0",
        "react-redux": "^5.0.7",
        "react-router-config": "^1.0.0-beta.4",
